@page "/"

<PageTitle>Home</PageTitle>
<h2>Hello</h2>
<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Welcome to <span class="text-danger">Coding Droplets</span></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span> You are not logged in. Plase <a class="fw-bolder" href="/login">Click here</a>to login.</span>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b>context.User.Identity.Name</b>.<a class="fw-bolder" href="/logout">Click here</a>to logout.</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>